{
  "name": "railgun",
  "private": true,
  "version": "0.1.0",
  "description": "Railgun Discord Bot Builder.",
  "author": "Railgun Contributors",
  "license": "CC-BY-NC-ND-4.0",
  "keywords": [
    "discord",
    "bot",
    "builder",
    "visual-programming",
    "electron",
    "rete",
    "react",
    "typescript"
  ],
  "target": "web",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "concurrently -n \"REACT,ELECTRON\" -c \"cyan,magenta\" \"bun run dev:react\" \"wait-on tcp:3000 && bun run dev:electron\"",
    "dev:react": "vite",
    "dev:electron": "nodemon --watch electron --ext ts,tsx,json --exec \"cross-env NODE_ENV=development bun run build:electron && electron .\"",
    "build": "tsc -b && vite build && bun run build:electron",
    "build:electron": "tsc -p tsconfig.electron.json",
    "dist": "bun run build && electron-builder",
    "lint": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "preview": "vite preview"
  },
  "dependencies": {
    "@electron/remote": "^2.1.3",
    "@xterm/addon-fit": "^0.11.0",
    "@xterm/xterm": "^6.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "electron-squirrel-startup": "^1.0.1",
    "lucide-react": "^0.562.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.11.0",
    "rete": "^2.0.6",
    "rete-area-plugin": "^2.1.5",
    "rete-connection-plugin": "^2.0.5",
    "rete-react-plugin": "^2.1.0",
    "rete-render-utils": "^2.0.3",
    "rete-std-plugin": "^2.0.2",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@tailwindcss/vite": "^4.1.18",
    "@tsconfig/node20": "^20.1.8",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "concurrently": "^9.2.1",
    "cross-env": "^7.0.3",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "nodemon": "^3.1.11",
    "prettier": "^3.7.4",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.railgun.app",
    "productName": "Railgun",
    "directories": {
      "output": "dist-app"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ]
  }
}